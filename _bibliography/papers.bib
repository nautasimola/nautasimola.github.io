@article{Sternbach2020,
 abbr={Nat. Commun.},
 title={Femtosecond exciton dynamics in <math> <msub> <mi>WSe</mi> <mn>2</mn> </msub> </math> optical waveguides},
 volume={11},
 rights={All rights reserved},
 ISSN={2041-1723},
 DOI={10.1038/s41467-020-17335-w},
 abstractNote={<p> Van-der Waals (vdW) atomically layered crystals can act as optical waveguides over a broad range of the electromagnetic spectrum ranging from Terahertz to visible. Unlike common Si-based waveguides, vdW semiconductors host strong excitonic resonances that may be controlled using non-thermal stimuli including electrostatic gating and photoexcitation. Here, we utilize waveguide modes to examine photo-induced changes of excitons in the prototypical vdW semiconductor, WSe 2 , prompted by femtosecond light pulses. Using time-resolved scanning near-field optical microscopy we visualize the electric field profiles of waveguide modes in real space and time and extract the temporal evolution of the optical constants following femtosecond photoexcitation. By monitoring the phase velocity of the waveguide modes, we detect incoherent A-exciton bleaching along with a coherent optical Stark shift in WSe 2 . </p>},
 number={1},
 journal={Nature Communications},
 author={Sternbach, Aaron J. and Latini, Simone and Chae, Sanghoon and Hübener, Hannes and De Giovannini, Umberto and Shao, Yinming and Xiong, Lin and Sun, Zhiyuan and Shi, Norman and Kissin, Peter and Ni, Guang-Xin and Rhodes, Daniel and Kim, Brian and Yu, Nanfang and Millis, Andrew J. and Fogler, Michael M. and Schuck, Peter J. and Lipson, Michal and Zhu, X.-Y. and Hone, James and Averitt, Richard D. and Rubio, Angel and Basov, D. N.},
