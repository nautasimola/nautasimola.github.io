 publisher={Nature Publishing Group},
 author={Zhou, Ling and Huang, Junwei and Windgaetter, Lukas and Ong, Chin Shen and Zhao, Xiaoxu and Zhang, Caorong and Tang, Ming and Li, Zeya and Qiu, Caiyu and Latini, Simone and Lu, Yangfan and Wu, Di and Gou, Huiyang and Wee, Andrew T. S. and Hosono, Hideo and Louie, Steven G. and Tang, Peizhe and Rubio, Angel and Yuan, Hongtao},
